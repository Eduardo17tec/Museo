@model IEnumerable<Museo.Models.Country>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-dark" id="Pais">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artwork.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-body">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artwork.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePais)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>



</table>

@section  Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready( function () {
            $('#Pais').DataTable();
        } );
    </script>
}